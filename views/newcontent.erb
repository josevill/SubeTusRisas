<div class="container">
	<div class="page-header">
		<h1>
			Crear contenido
		</h1>
	</div>

	<form method="post" action="/contenido-nuevo">
		<div class="form-group">
			<input name="titulo" type="text" class="form-control" placeholder="Titulo de la imagen">
		</div>
		<div class="form-group">
			<input name="poster" type="text" class="form-control" placeholder="Tu nombre">
		</div>
		<div class="form-group">
			<input name="link" class="form-control" placeholder="Enlace (Link) a la imagen">
		</div>
		<button type="submit" class="btn btn-info btn-lg">Enviar imagen!</button>
	</form>
</div>